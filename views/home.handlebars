<div id="photo">
    <h1>Mongo Scraper</h1>
    <img src="images/bbc.png" alt="newspic">
</div>



<div class="panel panel-default">
    {{#each Article}}
    <div id="articles">
        <div class="panel-heading">
            <div id="title-results">
                {{!-- {{this.title}} --}}
                 {{title}}
            </div>
        </div>
        <div class="panel-body">
            <div id="summary-results">
                {{this.summary}}
            </div>
            <div id="link-results">
                {{this.link}}
            </div>
        </div>
        <form action="/articles/{{_id}} method="POST">
            <div class="form-group ">
                <label for="input-comment ">Leave note</label>
                <input type="text" class="form-control " id="input-comment">
                <button type="submit" class="note-btn btn-default">Submit</button>
            </div>
        </form>
        {{#if Note}}
            {{#each Note}}
            <button action="/delete/{{_id}}" method="DELETE" class="delete-btn btn-default">Delete</button>
            {{/each}}
        {{/if}}
        {}
    </div>
    {{/each}}
</div>